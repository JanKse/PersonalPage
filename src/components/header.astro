---
import {bgColorList, getRandomItem, hostURL} from '../scripts/index'
const {TitleBio1, TitleBio2, TitleGreeting, IAmList} = Astro.props;

 //Make a request for a user with a given ID
---
<header>
    <div class="font-bold text-center flex items-center justify-center text-gray-900">
        <h1 class="text-7xl mr-8">{TitleGreeting} </h1>
        <svg xmlns="http://www.w3.org/2000/svg" class="inline lg:w-20 lg:h-20 w-16 h-16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M11 11.5v-1a1.5 1.5 0 0 1 3 0v1.5"></path>
            <path d="M17 12v-6.5a1.5 1.5 0 0 1 3 0v10.5a6 6 0 0 1 -6 6h-2h.208a6 6 0 0 1 -5.012 -2.7a69.74 69.74 0 0 1 -.196 -.3c-.312 -.479 -1.407 -2.388 -3.286 -5.728a1.5 1.5 0 0 1 .536 -2.022a1.867 1.867 0 0 1 2.28 .28l1.47 1.47"></path>
            <path d="M14 10.5a1.5 1.5 0 0 1 3 0v1.5"></path>
            <path d="M8 13v-8.5a1.5 1.5 0 0 1 3 0v7.5"></path>
         </svg>
    </div>
    <div class="text-center my-4 text-gray-900">
        <span class="block md:text-4xl text-2xl">{TitleBio1}</span>
        <span class="block md:text-3xl text-xl  font-medium">{TitleBio2}</span>
    </div>
    <div class="flex flex-row justify-center flex-wrap lg:px-64">
        {IAmList.map((item) => (
            <span class:list={[getRandomItem(bgColorList),'md:text-m','text-sm','font-medium','md:mr-2','md:mb-2','mr-1.5','mb-1.5','md:px-4','px-2','py-1','rounded']} >{item}</li>
          ))}
    </div>
</header>

        